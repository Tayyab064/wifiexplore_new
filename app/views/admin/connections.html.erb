<script>
  $(function () {
    //$("#connections").DataTable();
    $('#connections').DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": true
    });

    $(".dataTables_length").addClass("col-md-6");

    var d0 = [];
    var d00 = [];
    var d000 = [];

	<% @connection.limit(50).each_with_index do |con , ind| %>
	  d0.push([<%= ind %>, parseInt(Math.floor(<%= con.download_data %>))]);
	  d00.push([<%= ind %>, parseInt(Math.floor(<%= con.upload_data %>))]);
	  d000.push([<%= ind %>, parseInt(Math.floor(<%= con.total_bill %>))]);
	<% end %>

  	$("#flot-sp1ine").length && $.plot($("#flot-sp1ine"), [
          d0, d00 , d000
      ],
      {
        series: {
            lines: {
                show: false
            },
            splines: {
              show: true,
              tension: 0.4,
              lineWidth: 1,
              fill: 0.4
            },
            points: {
                radius: 0,
                show: true
            },
            shadowSize: 2
        },
        grid: {
            hoverable: true,
            clickable: true,
            tickColor: "#d9dee9",
            borderWidth: 1,
            color: '#d9dee9'
        },
        colors: [ "#1d89cf","#1aae88", "#e33244"],
        xaxis:{
        },
        yaxis: {
          ticks: 4
        },
        tooltip: true,
        tooltipOpts: {
          content: "%y.4",
          defaultTheme: false,
          shifts: {
            x: 0,
            y: 20
          }
        }
      }
  	);
  });
</script>

